[user]
	name = Joel Gillman
	email = joeltgillman@gmail.com

[alias]
	st = status
	co = checkout
	sp = stash pop
	di = diff
	dc = diff --cached
	mylog = log --author=Joel

	head = !git l -1
	h = !git head
	l = "!source ~/.githelpers && pretty_git_log"

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[core]
	excludesfile = ~/.gitignore
	editor = vim

[github]
	user = jgillman
